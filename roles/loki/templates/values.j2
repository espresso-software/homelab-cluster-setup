loki:
  auth_enabled: false
  schemaConfig:
    configs:
      - from: "2025-01-01"
        store: tsdb
        object_store: s3
        schema: v13
        index:
          prefix: loki_index_
          period: 24h
  ingester:
    chunk_encoding: snappy
  querier:
    max_concurrent: 4
  pattern_ingester:
    enabled: true
  limits_config:
    allow_structured_metadata: true
    volume_enabled: true
  storage:
    bucketNames:
      chunks: chunks
      ruler: ruler
      admin: admin
lokiCanary:
  resources:
    limits:
      cpu: 100m
      memory: 64Mi
    requests:
      cpu: 50m
      memory: 32Mi
gateway:
  replicas: {{ loki_gateway_replicas | default(2) }}
  resources:
    limits:
      cpu: 100m
      memory: 128Mi
    requests:
      cpu: 50m
      memory: 16Mi
  nodeSelector:
    kubernetes.io/role: worker
  service:
    type: LoadBalancer
    annotations:
      metallb.universe.tf/allow-shared-ip: "loki"
      metallb.universe.tf/loadBalancerIps: "{{ loki_ip }}"
write:
  replicas: {{ loki_write_replicas | default(3) }}
  nodeSelector:
    kubernetes.io/role: worker
  persistence:
    size: {{ loki_write_storage_gb | default(2) }}G
  resources:
    limits:
      cpu: 200m
      memory: 512Mi
    requests:
      cpu: 50m
      memory: 256Mi
read:
  replicas: {{ loki_read_replicas | default(3) }}
  nodeSelector:
    kubernetes.io/role: worker
  resources:
    limits:
      cpu: 200m
      memory: 1Gi
    requests:
      cpu: 50m
      memory: 512Mi
backend:
  replicas: {{ loki_backend_replicas | default(2) }}
  nodeSelector:
    kubernetes.io/role: worker
  persistence:
    size: {{ loki_backend_storage_gb | default(2) }}G
  resources:
    limits:
      cpu: 100m
      memory: 512Mi
    requests:
      cpu: 50m
      memory: 128Mi
chunksCache:
  allocatedMemory: 1024
  resources:
    requests:
      cpu: 50m
minio:
  enabled: true
  nodeSelector:
    kubernetes.io/role: worker
  persistence:
    size: {{ loki_minio_storage_gb | default(10) }}G
  resources:
    limits:
      cpu: 200m
      memory: 256Mi
    requests:
      cpu: 50m
      memory: 128Mi
ingester:
  replicas: 0
querier:
  replicas: 0
queryFrontend:
  replicas: 0
queryScheduler:
  replicas: 0
distributor:
  replicas: 0
compactor:
  replicas: 0
indexGateway:
  replicas: 0
bloomCompactor:
  replicas: 0
bloomGateway:
  replicas: 0
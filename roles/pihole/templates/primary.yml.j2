---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: primary-etc-pihole
  namespace: {{ pihole_namespace }}
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: "1Gi"
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: primary-etc-dnsmasq-d
  namespace: {{ pihole_namespace }}
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: "1Gi"
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: primary-config
  namespace: {{ pihole_namespace }}
data:
  TZ: America/Los_Angeles
  VIRTUAL_HOST: "primary.dns.{{ domain }}"
  PROXY_LOCATION: "pi.hole"
  FTL_CONF_LOCAL_IPV4: "127.0.0.1"
---
apiVersion: v1
kind: Service
metadata:
  name: primary-dns
  namespace: {{ pihole_namespace }}
  annotations:
    metallb.universe.tf/allow-shared-ip: "primary-dns"
    metallb.universe.tf/loadBalancerIPs: "{{ network.dns1 }}"
spec:
  selector:
    app: pihole
    version: primary
  ports:
    - name: dns
      port: 53
      targetPort: 53
      protocol: TCP
    - name: dns
      port: 53
      targetPort: 53
      protocol: UDP
  type: LoadBalancer
  externalTrafficPolicy: Local
---
apiVersion: v1
kind: Service
metadata:
  name: primary-http
  namespace: {{ pihole_namespace }}
spec:
  selector:
    app: pihole
    version: primary
  ports:
    - name: http
      port: 80
      targetPort: 80
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: primary
  namespace: pihole
  labels:
    app: pihole
    namespace: pihole
    version: primary
  annotations:
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
    cert-manager.io/cluster-issuer: letsencrypt-prod
    cert-manager.io/duration: 9840h
    cert-manager.io/renew-before: 720h
spec:
  rules:
    - host: "primary.dns.{{ domain }}"
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: primary-http
                port:
                  number: 80
  tls:
    - hosts:
        - "primary.dns.{{ domain }}"
      secretName: pihole-tls
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: primary
  namespace: {{ pihole_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: pihole
      version: primary
  template:
    metadata:
      labels:
        app: pihole
        version: primary
    spec:
      nodeSelector:
        kubernetes.io/role: worker
      strategy:
        type: Recreate
      containers:
        - name: pihole
          image: pihole/pihole:{{ version | default("latest") }}
          env:
            - name: WEBPASSWORD
              valueFrom:
                secretKeyRef:
                  name: pihole-secrets
                  key: WEBPASSWORD
            - name: TZ
              valueFrom:
                configMapKeyRef:
                  name: pihole-config
                  key: TZ
            - name: VIRTUAL_HOST
              valueFrom:
                configMapKeyRef:
                  name: pihole-config
                  key: VIRTUAL_HOST
            - name: PROXY_LOCATION
              valueFrom:
                configMapKeyRef:
                  name: pihole-config
                  key: PROXY_LOCATION
            - name: FTL_CONF_LOCAL_IPV4
              valueFrom:
                configMapKeyRef:
                  name: pihole-config
                  key: FTL_CONF_LOCAL_IPV4
          ports:
            - containerPort: 80
              name: http
              protocol: TCP
            - containerPort: 53
              name: dns-udp
              protocol: UDP
            - containerPort: 53
              name: dns-tcp
              protocol: TCP
          resources:
            requests:
              memory: "128Mi"
              cpu: "10m"
            limits:
              memory: "1Gi"
              cpu: "2"
          volumeMounts:
            - name: etc-pihole
              mountPath: /etc/pihole
            - name: etc-dnsmasq-d
              mountPath: /etc/dnsmasq.d
      volumes:
        - name: etc-pihole
          persistentVolumeClaim:
            claimName: primary-etc-pihole
        - name: etc-dnsmasq-d
          persistentVolumeClaim:
            claimName: primary-etc-dnsmasq-d